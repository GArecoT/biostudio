---
import Layout from "../layouts/Layout.astro";
import type { APIRoute } from "astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contato">
  <div class="flex justify-center" id="page-cadastro">
    <div class="page">
      <form
        action="https://formcarry.com/s/nNqoM9sF6dd"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="grid md:grid-cols-2 gap-4 pt-10 pb-5 px-5">
          <label class="input input-bordered flex items-center gap-2">
            Nome *
            <input name="Nome" type="text" class="grow" required />
          </label>
          <label class="input input-bordered flex items-center gap-2">
            Sobrenome *
            <input name="Sobrenome" type="text" class="grow" required />
          </label>
          <label class="input input-bordered flex items-center gap-2">
            Email *
            <input name="Email" type="email" class="grow" required />
          </label>
          <label class="input input-bordered flex items-center gap-2">
            Telefone *
            <input name="Telefone" type="tel" class="grow" required />
          </label>
        </div>
        <div class="w-full px-5">
          <textarea
            name="Mensagem"
            class="textarea textarea-bordered w-full"
            required
            placeholder="Mensagem"></textarea>
        </div>
        <div class="flex justify-end w-full p-5">
          <button
            id="enviar"
            type="submit"
            class="btn bg-[#5c7545] text-white hover:bg-[#53693f]"
            >Enviar</button
          >
        </div>
      </form>
    </div>
  </div>
</Layout>
