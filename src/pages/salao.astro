        <!-- </div> -->
        <div>
          <div class="divider pt-0 mt-0"></div>
          <div
            class="flex md:justify-start justify-between md:px-10 px-5 texto-cards-home content-center text-gray-700"
          >
            <div class="texto-mini text-gray-500 pr-5">DESIGN</div>
            <div class="text-right md:absolute nome-pessoas">TATIANA VELLA</div>
          </div>
          <div class="divider"></div>
        </div>
        <div>
          <div
            class="flex md:justify-start justify-between md:px-10 px-5 texto-cards-home content-center text-gray-700"
          >
            <div class="texto-mini text-gray-500 md:pr-40 pr-5">
              ILUSTRAÇÕES
            </div>
            <div class="text-right md:absolute nome-pessoas">ISABEL SAAD</div>
          </div>
          <div class="divider"></div>
        </div>
        <!-- <div> -->
        <!--   <div class="flex md:justify-start justify-between md:px-10 px-5 texto-cards-home content-center text-gray-700"> -->
        <!--     <div class="texto-mini text-gray-500 md:pr-40 pr-5">SUSTENTABILIDE</div> -->
        <!--     <div class="text-right md:absolute  nome-pessoas">MATERIAIS REUTILIZADOS</div> -->
        <!--   </div> -->
        <!--   <div class="divider" /> -->
        <!-- </div> -->
        <div>
          <div
            class="flex md:justify-start justify-between md:px-10 px-5 texto-cards-home content-center text-gray-700"
          >
            <div class="texto-mini text-gray-500 md:pr-40 pr-5">PROJETO</div>
            <div class="text-right md:absolute nome-pessoas">LARA MAKSOUD</div>
          </div>
          <div class="divider"></div>
        </div>
        <!-- <div> -->
        <!--   <div class="flex md:justify-start justify-between md:px-10 px-5 texto-cards-home content-center text-gray-700"> -->
