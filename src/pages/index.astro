    </div>

    </div>
    
  </div>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
  .centralizar-absolute{
    position: absolute;
    left: 0%;
    right: 0%;
    margin-inline: auto;
    width: 305px;
  }
  .texto-cards-home{
    font-size: 1.4rem
  }
  .botao-direita {
    height: 33px; width: 33px;
  }

  @media only screen and (max-width: 850px) {
    .texto-cards-home{
      font-size: 1rem;
    }
    .centralizar-absolute{
      width: 200px;
    }
    .botao-direita {
      height: 25px; width: 33px;
    }
  } 
</style>
